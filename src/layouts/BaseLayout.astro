---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const { 
  title, 
  description = 'DigitalLab - Software, Learning, And The Journey Between. A blog by Amrit Adhikari about web development, Java, Spring Boot, and technology.',
  image = '/logo.png',
  article = false
} = Astro.props;

const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Amrit Adhikari" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:site_name" content="DigitalLab" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav>
        <div class="container">
          <a href={base} class="logo">
            <img src={`${base}logo.png`} alt="A Digital Lab - Software, Learning, And The Journey Between" class="logo-image" />
          </a>
          <div class="nav-right">
            <ul>
              <li><a href={base} class:list={{ active: currentPath === base || currentPath === `${base}/` }}>Home</a></li>
              <li><a href={`${base}blog`} class:list={{ active: currentPath.startsWith(`${base}blog`) }}>Blog</a></li>
              <li><a href={`${base}series`} class:list={{ active: currentPath === `${base}series` }}>Series</a></li>
              <li><a href={`${base}gallery`} class:list={{ active: currentPath === `${base}gallery` }}>Gallery</a></li>
              <li><a href={`${base}about`} class:list={{ active: currentPath === `${base}about` }}>About</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="container">
        <div class="footer-content">
          <p>&copy; {new Date().getFullYear()} DigitalLab. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  header {
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
  }

  nav {
    padding: 1rem 0;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 65px;
    width: auto;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  nav ul {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  nav a {
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: color 0.2s;
  }

  nav a:hover,
  nav a.active {
    color: var(--color-primary);
  }

  main {
    min-height: calc(100vh - 200px);
  }

  footer {
    background: var(--color-bg-secondary);
    padding: 2rem 0;
    margin-top: 4rem;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    text-align: center;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    nav ul {
      gap: 1rem;
    }

    .nav-right {
      gap: 1rem;
    }
  }
</style>
