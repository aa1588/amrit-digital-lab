---
import BaseLayout from '../layouts/BaseLayout.astro';
import resources from '../data/resources.json';

// Events / photo items
const galleryItems = [
  {
    image: '/gallery/masters-graduation.jpg',
    caption: 'Graduation: Master\'s in Computer Science, UNT',
    date: 'December 2025'
  },
  {
    image: '/gallery/unt-final-day-2025.jpg',
    caption: 'Final Day at UNT - Master\'s Program Completion',
    date: 'December 2025'
  },
  {
    image: '/gallery/uni-research-day-presentation-2025.jpg',
    caption: 'Presented a little research on LLM bias at the University Research Day Event',
    date: 'October 2025'
  },
  {
    image: '/gallery/ai-summer-research-2025.jpeg',
    caption: 'UNT AI Summer Research Program',
    date: 'Summer 2025'
  },
  {
    image: '/gallery/IMG_AGENTCON2025.jpg',
    caption: 'Home Base Fit Check: See you soon, AgentCon\'25 Dallas!',
    date: 'July 2025'
  },
  {
    image: '/gallery/IMG_AgentCon_Badge.jpg',
    caption: 'Officially Checked In! AgentCon 2025',
    date: 'July 2025'
  },
  {
    image: '/gallery/summer_research.png',
    caption: 'Summer Research Program',
    date: 'July 2025'
  },
  {
    image: '/gallery/k8s-demo.png',
    caption: 'Presentation on Microservices Deployment with Kubernetes',
    date: 'November 2024'
  },
];
---

<BaseLayout title="Events - DigitalLab" description="Resources, materials, and moments from my journey in tech, events, and community participation.">
  <div class="events-page">
    <div class="container">

      <!-- ── Resources & Materials ──────────────────────── -->
      <div class="page-header">
        <h1>Events</h1>
        <p class="subtitle">Resources, materials, and moments from my journey in tech and community.</p>
      </div>

      <section class="section">
        <div class="section-label">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>
          Resources &amp; Materials
        </div>

        <div class="resources-grid">
          {resources.map((group, index) => (
            <div class="resource-group" style={`--accent-hue: ${(index * 47) % 360}`}>
              <div class="resource-header">
                <div class="resource-icon">
                  {group.topic.includes('AI') || group.topic.includes('ML') || group.topic.includes('NLP') ? (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a4 4 0 0 1 4 4v2a4 4 0 0 1-8 0V6a4 4 0 0 1 4-4z"/><path d="M16 10v1a4 4 0 0 1-8 0v-1"/><path d="M12 14v8"/><path d="M8 18h8"/></svg>
                  ) : group.topic.includes('RAG') || group.topic.includes('Retrieval') ? (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/><path d="M11 8v6"/><path d="M8 11h6"/></svg>
                  ) : group.topic.includes('Kafka') ? (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4v16"/><path d="M9 4v16"/><path d="M14 4v16"/><path d="M19 4v16"/><path d="M4 8h5"/><path d="M14 8h5"/><path d="M4 16h5"/><path d="M14 16h5"/></svg>
                  ) : group.topic.includes('Spring') ? (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"/><path d="M17 4a2 2 0 0 0 2 2a2 2 0 0 0 -2 2a2 2 0 0 0 -2 -2a2 2 0 0 0 2 -2"/></svg>
                  ) : group.topic.includes('Kubernetes') || group.topic.includes('Docker') ? (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12.5c0 .6-.2 1.1-.5 1.5l-6.6 6.6c-.8.8-2 .8-2.8 0l-6.6-6.6c-.4-.4-.5-.9-.5-1.5V6c0-1.1.9-2 2-2h13c1.1 0 2 .9 2 2v6.5z"/><path d="M10 8h4"/><path d="M12 6v4"/></svg>
                  ) : group.topic.includes('AWS') ? (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6.5 12c.94-3.46 4.94-6 8.5-6 3.5 0 6.5 2 7 5"/><path d="M6 12a5 5 0 0 0 0 10h11a5 5 0 1 0-.5-9.97"/></svg>
                  ) : (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
                  )}
                </div>
                <div class="resource-meta">
                  <h3 class="resource-topic">{group.topic}</h3>
                  <span class="resource-count">{group.links.length} {group.links.length === 1 ? 'resource' : 'resources'}</span>
                </div>
              </div>
              <ul class="resource-links">
                {group.links.map((link) => (
                  <li class="resource-item">
                    <a href={link.url} target="_blank" rel="noopener noreferrer" class="resource-link">
                      <div class="link-content">
                        <span class="resource-link-title">{link.title}</span>
                        {link.description && (
                          <p class="resource-link-desc">{link.description}</p>
                        )}
                      </div>
                      <span class="link-arrow">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
                      </span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <!-- ── Events / Photos ────────────────────────────── -->
      <section class="section">
        <div class="section-label">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
          Photos &amp; Moments
        </div>

        <div class="gallery-grid">
          {galleryItems.map((item) => (
            <div class="gallery-card">
              <div class="image-container">
                <img src={item.image} alt={item.caption} loading="lazy" />
              </div>
              <div class="card-content">
                <p class="caption">{item.caption}</p>
                <p class="date">{item.date}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

    </div>
  </div>
</BaseLayout>

<style>
  .events-page {
    padding: 4rem 0 6rem;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ── Page header ─────────────────────────────────────── */
  .page-header {
    margin-bottom: 3.5rem;
  }

  .page-header h1 {
    font-size: 2.75rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* ── Sections ────────────────────────────────────────── */
  .section {
    margin-bottom: 4rem;
    padding-top: 2.5rem;
    border-top: 1px solid var(--color-border);
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    margin-bottom: 1.75rem;
  }

  /* ── Resources grid ──────────────────────────────────── */
  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.75rem;
  }

  .resource-group {
    --accent-color: hsl(var(--accent-hue, 220), 65%, 55%);
    --accent-bg: hsl(var(--accent-hue, 220), 60%, 96%);
    --accent-bg-hover: hsl(var(--accent-hue, 220), 55%, 93%);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 0;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  :global(.dark) .resource-group {
    --accent-bg: hsl(var(--accent-hue, 220), 40%, 15%);
    --accent-bg-hover: hsl(var(--accent-hue, 220), 35%, 20%);
  }

  .resource-group:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px -8px hsla(var(--accent-hue, 220), 50%, 40%, 0.15);
  }

  .resource-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem 1.5rem 1.25rem;
    background: var(--accent-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .resource-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-bg);
    border-radius: 12px;
    color: var(--accent-color);
    flex-shrink: 0;
    box-shadow: 0 2px 8px -2px hsla(var(--accent-hue, 220), 50%, 40%, 0.12);
  }

  .resource-meta {
    flex: 1;
    min-width: 0;
  }

  .resource-topic {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.35rem;
    line-height: 1.35;
  }

  .resource-count {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--accent-color);
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .resource-links {
    list-style: none;
    padding: 0.5rem 0;
    margin: 0;
    display: flex;
    flex-direction: column;
  }

  .resource-item {
    border-bottom: 1px solid var(--color-border);
  }

  .resource-item:last-child {
    border-bottom: none;
  }

  .resource-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    font-family: 'Inter', sans-serif;
    text-decoration: none;
    transition: background 0.15s ease;
  }

  .resource-link:hover {
    background: var(--accent-bg-hover);
  }

  .link-content {
    flex: 1;
    min-width: 0;
  }

  .resource-link-title {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
    margin-bottom: 0.25rem;
    transition: color 0.15s ease;
  }

  .resource-link:hover .resource-link-title {
    color: var(--accent-color);
  }

  .resource-link-desc {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .link-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .resource-link:hover .link-arrow {
    background: var(--accent-color);
    color: white;
    transform: translate(2px, -2px);
  }

  /* ── Gallery grid ────────────────────────────────────── */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .gallery-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    overflow: hidden;
    transition: box-shadow 0.2s, transform 0.2s;
  }

  .gallery-card:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-hover);
  }

  .image-container {
    width: 100%;
    height: 260px;
    overflow: hidden;
    background: var(--color-bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .image-container img[src*="unt-final-day"],
  .image-container img[src*="AGENTCON"],
  .image-container img[src*="AgentCon_Badge"] {
    object-fit: cover;
  }

  .image-container img[src*="k8s-demo"] {
    object-fit: cover;
    object-position: 75% 85%;
  }

  .gallery-card:hover .image-container img {
    transform: scale(1.04);
  }

  .card-content {
    padding: 1rem 1.25rem 1.25rem;
  }

  .caption {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.3rem;
    line-height: 1.5;
  }

  .date {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }

  /* ── Responsive ──────────────────────────────────────── */
  @media (max-width: 768px) {
    .events-page {
      padding: 2rem 0 4rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .resources-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .resource-header {
      padding: 1.25rem;
    }

    .resource-icon {
      width: 40px;
      height: 40px;
    }

    .resource-link {
      padding: 1rem 1.25rem;
    }

    .link-arrow {
      width: 28px;
      height: 28px;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .image-container {
      height: 220px;
    }

    .image-container img {
      object-fit: contain !important;
    }
  }
</style>
