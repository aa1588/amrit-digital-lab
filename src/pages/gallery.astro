---

<BaseLayout title="Gallery - DigitalLab" description="Photos and moments from my journey in tech, events, and community participation.">
  <div class="gallery-page">
    <div class="container">
      <div class="header-section">
        <h1>Gallery</h1>
        <p class="subtitle">Moments from my journey in tech, events, and community participation.</p>
      </div>

      <div class="gallery-grid">
        {galleryItems.map((item) => (
          <div class="gallery-card">
            <div class="image-container">
              <img src={item.image} alt={item.caption} loading="lazy" />
            </div>
            <div class="card-content">
              <p class="caption">{item.caption}</p>
              <p class="date">{item.date}</p>
            </div>
          </div>
        ))}
      </div>

      <ResourcesSection />
    </div>
  </div>
</BaseLayout>

<style>
  .gallery-page {
    padding: 4rem 0 6rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header-section {
    text-align: center;
    margin-bottom: 4rem;
  }

  .header-section h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .gallery-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .gallery-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: var(--color-primary);
  }

  .image-container {
    width: 100%;
    height: 280px;
    overflow: hidden;
    background: var(--color-bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  /* Zoom in the UNT final day image to fit the card better */
  .image-container img[src*="unt-final-day"] {
    object-fit: cover;
  }

  /* Make AgentCon images fit the card view properly */
  .image-container img[src*="AGENTCON"] {
    object-fit: cover;
  }

  .image-container img[src*="AgentCon_Badge"] {
    object-fit: cover;
  }

  /* Zoom out university research day image to show more content */
  .image-container img[src*="uni-research-day"] {
    object-fit: contain;
  }

  /* Zoom in Kubernetes demo image to fit the card better */
  .image-container img[src*="k8s-demo"] {
    object-fit: cover;
    object-position: 75% 85%;
  }

  /* Make NSA event image fit the card properly */
  .image-container img[src*="NSA_Event"] {
    object-fit: cover;
  }

  /* Make Hanuman temple visit image fit the card properly */
  .image-container img[src*="Hanuman_temple"] {
    object-fit: cover;
  }

  /* Zoom out Dallas museum image to show more content */
  .image-container img[src*="dallas_museum"] {
    object-fit: contain;
  }

  /* Make Pikes Peak image fit the card properly and position to show head */
  .image-container img[src*="Pikes_Peak"] {
    object-fit: cover;
    object-position: center 30%;
  }

  /* Mobile responsive: use contain for all images on small screens */
  @media (max-width: 768px) {
    .image-container img {
      object-fit: contain !important;
    }
  }

  .gallery-card:hover .image-container img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .caption {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }

  .date {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .gallery-page {
      padding: 2rem 0 4rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .header-section {
      margin-bottom: 2.5rem;
    }

    .header-section h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1.0625rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .image-container {
      height: 240px;
    }
  }
</style>
