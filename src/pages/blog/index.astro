---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts.filter(post => !post.data.draft);
const sortedPosts = publishedPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const allTags = [...new Set(sortedPosts.flatMap(post => post.data.tags))].sort();
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Blog - DigitalLab" hideThemeToggle={true}>
  <div class="blog-page">
    <div class="container">

      <div class="page-header">
        <h1>Blog</h1>
        <p class="subtitle">{sortedPosts.length} posts on software engineering, systems, and learning.</p>
        <div class="screen-hint">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
          <span>Use a bigger screen for the best experience. Your phone works too.</span>
        </div>
      </div>

      <!-- ── Filters ─────────────────────────────────────── -->
      <div class="filters">
        <div class="search-wrap">
          <svg class="search-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
          <input id="search-input" type="text" placeholder="Search posts..." autocomplete="off" />
        </div>
        <div class="tag-filter" id="tag-filter">
          <button class="tag-btn active" data-tag="all">All</button>
          {allTags.map(tag => (
            <button class="tag-btn" data-tag={tag}>{tag}</button>
          ))}
        </div>
      </div>

      <!-- ── Posts list ──────────────────────────────────── -->
      <div class="posts-list" id="posts-list">
        {sortedPosts.map((post, i) => (
          <article
            class="post-item"
            data-title={post.data.title.toLowerCase()}
            data-description={post.data.description.toLowerCase()}
            data-tags={post.data.tags.join(',')}
          >
            <a href={`${base}blog/${post.slug}`} class="post-link">
              <span class="post-index">{String(i + 1).padStart(2, '0')}</span>
              <div class="post-body">
                {post.data.series && (
                  <span class="series-label">{post.data.series}</span>
                )}
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <h3>{post.data.title}</h3>
                <p class="post-desc">{post.data.description}</p>
              </div>
              <span class="post-arrow" aria-hidden="true">→</span>
            </a>
          </article>
        ))}
      </div>

      <p class="no-results" id="no-results">No posts match your search.</p>

    </div>
  </div>
</BaseLayout>

<style>
  .blog-page {
    padding: 4rem 0 6rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ── Header ───────────────────────────────────────────── */
  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.75rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin-bottom: 0.4rem;
  }

  .subtitle {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
  }

  .screen-hint {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: var(--color-accent-light);
    border-radius: 20px;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.75rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  .screen-hint svg {
    flex-shrink: 0;
  }

  /* ── Filters ──────────────────────────────────────────── */
  .filters {
    margin-bottom: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .search-wrap {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 0.875rem;
    color: var(--color-text-secondary);
    pointer-events: none;
    flex-shrink: 0;
  }

  #search-input {
    width: 100%;
    padding: 0.6rem 1rem 0.6rem 2.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text);
    outline: none;
    transition: border-color 0.2s;
  }

  #search-input::placeholder {
    color: var(--color-text-secondary);
    opacity: 0.7;
  }

  #search-input:focus {
    border-color: var(--color-text-secondary);
  }

  .tag-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-btn {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    padding: 0.3rem 0.875rem;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text-secondary);
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.15s;
    letter-spacing: 0.01em;
  }

  .tag-btn:hover {
    border-color: var(--color-text-secondary);
    color: var(--color-text);
  }

  .tag-btn.active {
    background: var(--color-bg-secondary);
    border-color: var(--color-text-secondary);
    color: var(--color-text);
  }

  /* ── Posts list ───────────────────────────────────────── */
  .posts-list {
    border-top: 1px solid var(--color-border);
  }

  .post-item {
    border-bottom: 1px solid var(--color-border);
  }

  .post-link {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.75rem 0;
    color: var(--color-text);
  }

  .post-link:hover {
    color: var(--color-text);
  }

  .post-link:hover h3 {
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: var(--color-border);
  }

  .post-link:hover .post-index {
    color: var(--color-text);
  }

  .post-index {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    padding-top: 0.3rem;
    flex-shrink: 0;
    width: 2rem;
    transition: color 0.2s;
    letter-spacing: 0.05em;
  }

  .post-body {
    flex: 1;
  }

  .series-label {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    padding: 1px 8px;
    margin-bottom: 0.4rem;
  }

  .post-link time {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.35rem;
    letter-spacing: 0.01em;
  }

  .post-link h3 {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
    margin-bottom: 0.4rem;
  }

  .post-desc {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .post-arrow {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: var(--color-text-secondary);
    flex-shrink: 0;
    padding-top: 0.25rem;
    opacity: 0;
    transform: translateX(-4px);
    transition: opacity 0.2s, transform 0.2s;
  }

  .post-link:hover .post-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* ── No results ───────────────────────────────────────── */
  .no-results {
    display: none;
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    padding: 3rem 0;
    text-align: center;
  }

  /* ── Responsive ───────────────────────────────────────── */
  @media (max-width: 768px) {
    .blog-page {
      padding: 2rem 0 4rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .post-link {
      gap: 1rem;
      padding: 1.5rem 0;
    }

    .post-index {
      display: none;
    }

    .post-link h3 {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const tagButtons = document.querySelectorAll<HTMLButtonElement>('.tag-btn');
  const posts = document.querySelectorAll<HTMLElement>('.post-item');
  const noResults = document.getElementById('no-results') as HTMLElement;

  let activeTag = 'all';
  let searchQuery = '';

  function filterPosts() {
    let visible = 0;
    posts.forEach(post => {
      const title = post.dataset.title || '';
      const desc = post.dataset.description || '';
      const tags = post.dataset.tags || '';

      const matchesSearch = !searchQuery ||
        title.includes(searchQuery) ||
        desc.includes(searchQuery) ||
        tags.includes(searchQuery);

      const matchesTag = activeTag === 'all' ||
        tags.split(',').map(t => t.trim()).includes(activeTag);

      const show = matchesSearch && matchesTag;
      post.style.display = show ? '' : 'none';
      if (show) visible++;
    });
    noResults.style.display = visible === 0 ? 'block' : 'none';
  }

  searchInput?.addEventListener('input', () => {
    searchQuery = searchInput.value.toLowerCase().trim();
    filterPosts();
  });

  tagButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      activeTag = btn.getAttribute('data-tag') || 'all';
      tagButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      filterPosts();
    });
  });
</script>
