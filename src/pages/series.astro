---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts.filter(post => !post.data.draft);

// Group posts by series
const seriesMap = new Map<string, typeof publishedPosts>();
publishedPosts.forEach(post => {
  if (post.data.series) {
    if (!seriesMap.has(post.data.series)) {
      seriesMap.set(post.data.series, []);
    }
    seriesMap.get(post.data.series)?.push(post);
  }
});

// Sort posts within each series
seriesMap.forEach(posts => {
  posts.sort((a, b) => (a.data.seriesOrder || 0) - (b.data.seriesOrder || 0));
});

const series = Array.from(seriesMap.entries()).map(([name, posts]) => ({
  name,
  posts,
  count: posts.length
}));
---

<BaseLayout title="Series - DigitalLab">
  <div class="series-page">
    <div class="container">
      <header class="page-header">
        <h1>Blog Series</h1>
        <p>Organized collections of posts on specific topics</p>
      </header>

      {series.length === 0 ? (
        <p class="no-series">No series available yet. Check back soon!</p>
      ) : (
        <div class="series-grid">
          {series.map(({ name, posts, count }) => (
            <div class="series-card">
              <div class="series-header">
                <h2>
                  {name === 'Apache Kafka' ? (
                    <span class="series-icon-wrapper">
                      <img src="/blog-images/kafka/Apache-Kafka.svg" alt="Apache Kafka" class="series-icon" />
                      {name}
                    </span>
                  ) : name === 'Spring Boot - Aspect Oriented Programming' ? (
                    <span class="series-icon-wrapper">
                      <img src="/blog-images/spring/springio-icon.svg" alt="Spring Boot" class="series-icon" />
                      {name}
                    </span>
                  ) : name === 'OAuth 2.0' ? (
                    <span class="series-icon-wrapper">
                      <img src="/blog-images/oauth2/oauth-svgrepo-com.svg" alt="OAuth 2.0" class="series-icon" />
                      {name}
                    </span>
                  ) : (
                    <>ðŸ“š {name}</>
                  )}
                </h2>
                <span class="post-count">{count} {count === 1 ? 'post' : 'posts'}</span>
              </div>
              <div class="series-posts">
                {posts.map((post, index) => (
                  <a href={`/blog/${post.slug}`} class="series-post">
                    <span class="post-number">{index + 1}</span>
                    <div class="post-info">
                      <h3>{post.data.title}</h3>
                      <p>{post.data.description}</p>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </div>
</BaseLayout>

<style>
  .series-page {
    padding: 3rem 0;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .page-header p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
  }

  .no-series {
    text-align: center;
    color: var(--color-text-secondary);
    padding: 3rem 0;
  }

  .series-grid {
    display: grid;
    gap: 2rem;
  }

  .series-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.25rem;
    box-shadow: var(--shadow);
  }

  .series-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .series-header h2 {
    font-size: 1.375rem;
    color: var(--color-text);
  }

  .series-icon-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .series-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  /* Make OAuth logo bigger on series page */
  .series-icon-wrapper img[src*="oauth"] {
    width: 28px;
    height: 28px;
    margin-top: -3px;
  }

  .post-count {
    background: var(--color-bg-secondary);
    padding: 0.35rem 0.75rem;
    border-radius: 16px;
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
  }

  .series-posts {
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
  }

  .series-post {
    display: flex;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 6px;
    border: 1px solid var(--color-border);
    transition: all 0.2s;
    color: inherit;
  }

  .series-post:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow);
    text-decoration: none;
  }

  .post-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    background: var(--color-bg-secondary);
    color: var(--color-text);
    border-radius: 50%;
    font-weight: 600;
    font-size: 0.875rem;
    flex-shrink: 0;
    border: 1px solid var(--color-border);
  }

  .post-info {
    flex: 1;
  }

  .post-info h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .post-info p {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .series-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }
</style>
