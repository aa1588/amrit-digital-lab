---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts.filter(post => !post.data.draft);

const seriesMap = new Map<string, typeof publishedPosts>();
publishedPosts.forEach(post => {
  if (post.data.series) {
    if (!seriesMap.has(post.data.series)) {
      seriesMap.set(post.data.series, []);
    }
    seriesMap.get(post.data.series)?.push(post);
  }
});

seriesMap.forEach(posts => {
  posts.sort((a, b) => (a.data.seriesOrder || 0) - (b.data.seriesOrder || 0));
});

const series = Array.from(seriesMap.entries()).map(([name, posts]) => ({
  name,
  posts,
  count: posts.length
}));

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Series - DigitalLab">
  <div class="series-page">
    <div class="container">

      <div class="page-header">
        <h1>Series</h1>
        <p class="subtitle">Structured learning paths — follow from part one to the end.</p>
        <div class="screen-hint">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>
          <span>Use a bigger screen for the best experience. Your phone works too.</span>
        </div>
      </div>

      {series.length === 0 ? (
        <p class="no-series">No series available yet.</p>
      ) : (
        <div class="series-list">
          {series.map(({ name, posts, count }) => (
            <div class="series-card">
              <div class="series-header">
                <div class="series-title-row">
                  <span class="series-icon">
                    {name === 'Apache Kafka' ? (
                      <img src={`${base}icons/kafka.svg`} alt="Kafka" width="24" height="24" />
                    ) : name.includes('Spring') ? (
                      <img src={`${base}icons/spring.svg`} alt="Spring" width="24" height="24" />
                    ) : name === 'OAuth 2.0' ? (
                      <img src={`${base}icons/oauth.svg`} alt="OAuth" width="24" height="24" />
                    ) : name === 'Microservices Patterns' ? (
                      <img src={`${base}icons/microservices.svg`} alt="Microservices" width="24" height="24" />
                    ) : name === 'PyTorch' ? (
                      <img src={`${base}icons/pytorch.svg`} alt="PyTorch" width="24" height="24" />
                    ) : (
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                        <path d="M19 2H6c-1.2 0-2 .9-2 2v16c0 1.1.9 2 2 2h13c1.1 0 2-.9 2-2V4c0-1.1-.8-2-2-2m0 18H6V4h2v8l2.5-1.5L13 12V4h6v16z"/>
                      </svg>
                    )}
                  </span>
                  <h2>{name}</h2>
                </div>
                <span class="post-count">{count} {count === 1 ? 'post' : 'posts'}</span>
              </div>

              <ol class="series-posts">
                {posts.map((post, idx) => (
                  <li class="series-post-item">
                    <a href={`${base}blog/${post.slug}`} class="series-post-link">
                      <span class="post-num">{String(idx + 1).padStart(2, '0')}</span>
                      <span class="post-title">{post.data.title}</span>
                      <span class="post-arrow" aria-hidden="true">→</span>
                    </a>
                  </li>
                ))}
              </ol>
            </div>
          ))}
        </div>
      )}

    </div>
  </div>
</BaseLayout>

<style>
  .series-page {
    padding: 4rem 0 6rem;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ── Header ───────────────────────────────────────────── */
  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.75rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin-bottom: 0.4rem;
  }

  .subtitle {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
  }

  .screen-hint {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: var(--color-accent-light);
    border-radius: 20px;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.75rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  .screen-hint svg {
    flex-shrink: 0;
  }

  .no-series {
    font-family: 'Inter', sans-serif;
    color: var(--color-text-secondary);
    padding: 3rem 0;
    text-align: center;
  }

  /* ── Series list ──────────────────────────────────────── */
  .series-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .series-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
  }

  /* ── Series header ────────────────────────────────────── */
  .series-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .series-title-row {
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .series-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-bg-warm);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    flex-shrink: 0;
  }

  .series-icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .series-header h2 {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .post-count {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    padding: 2px 10px;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* ── Posts list ───────────────────────────────────────── */
  .series-posts {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .series-post-item {
    border-bottom: 1px solid var(--color-border);
  }

  .series-post-item:last-child {
    border-bottom: none;
  }

  .series-post-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem 1.5rem;
    color: var(--color-text-secondary);
    transition: background 0.15s, color 0.15s;
  }

  .series-post-link:hover {
    background: var(--color-bg);
    color: var(--color-text);
  }

  .series-post-link:hover .post-num {
    color: var(--color-text);
  }

  .series-post-link:hover .post-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .post-num {
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    color: var(--color-text-secondary);
    flex-shrink: 0;
    width: 1.75rem;
    transition: color 0.15s;
  }

  .post-title {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    color: inherit;
    flex: 1;
    line-height: 1.4;
  }

  .post-arrow {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    flex-shrink: 0;
    opacity: 0;
    transform: translateX(-4px);
    transition: opacity 0.2s, transform 0.2s;
  }

  /* ── Responsive ───────────────────────────────────────── */
  @media (max-width: 768px) {
    .series-page {
      padding: 2rem 0 4rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .series-header {
      padding: 1rem 1.25rem;
    }

    .series-post-link {
      padding: 0.875rem 1.25rem;
    }
  }
</style>
