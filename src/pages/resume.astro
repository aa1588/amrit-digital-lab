---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Resume - Amrit Adhikari">
  <div class="resume-container">
    <div class="resume-header">
      <h1>Resume</h1>
      <a 
        href="https://docs.google.com/document/d/1it6epqo68I7Nyx7pEF3Bmly-siVdwN-Gq2r-pEv-XEM/edit?usp=sharing" 
        target="_blank" 
        rel="noopener noreferrer"
        class="download-link"
      >
        Open in new tab â†’
      </a>
    </div>
    <div class="pdf-wrapper">
      <iframe
        src="https://docs.google.com/document/d/1it6epqo68I7Nyx7pEF3Bmly-siVdwN-Gq2r-pEv-XEM/preview"
        class="pdf-viewer"
        allow="autoplay"
      ></iframe>
    </div>
  </div>
</BaseLayout>

<style>
  .resume-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .resume-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .resume-header h1 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .download-link {
    font-size: 1rem;
    color: var(--color-text);
    font-weight: 400;
    border-bottom: 1px solid var(--color-text);
    padding-bottom: 2px;
    transition: opacity 0.2s ease;
    font-family: 'Inter', sans-serif;
  }

  .download-link:hover {
    opacity: 0.6;
  }

  .pdf-wrapper {
    width: 100%;
    height: calc(100vh - 250px);
    min-height: 600px;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .pdf-viewer {
    width: 100%;
    height: 100%;
    border: none;
  }

  @media (max-width: 768px) {
    .resume-container {
      padding: 2rem 1rem;
    }

    .resume-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .resume-header h1 {
      font-size: 2rem;
    }

    .pdf-wrapper {
      height: calc(100vh - 280px);
      min-height: 500px;
    }
  }
</style>
