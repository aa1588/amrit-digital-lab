    color: var(--color-text);
    font-weight: 500;
  }

  .tl-title {
    font-family: 'Crimson Text', Georgia, serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    margin-top: 0.2rem;
    line-height: 1.4;
  }

  .tl-sub {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-top: 0.2rem;
  }

  .tl-bullets {
    list-style: none;
    padding-left: 0;
    margin: 0.75rem 0 0;
  }

  .tl-bullets li {
    position: relative;
    padding-left: 1rem;
    margin-bottom: 0.4rem;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    font-family: 'Inter', sans-serif;
  }

  .tl-bullets li::before {
