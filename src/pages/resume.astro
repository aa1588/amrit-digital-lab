  }

  .tl-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.75rem;
  }

  .tl-tags span {
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    padding: 2px 9px;
    border-radius: 100px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  /* ── Research ────────────────────────────────────────── */
  .pub-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .pub-entry {
    padding-left: 1rem;
    border-left: 2px solid var(--color-border);
  }

  .pub-title {
    font-family: 'Crimson Text', Georgia, serif;
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    margin-bottom: 0.25rem;
  }

  .pub-authors {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.2rem;
  }

  .pub-venue {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    font-style: italic;
  }

  /* ── Events ──────────────────────────────────────────── */
  .event-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-entry {
    display: grid;
    grid-template-columns: 44px 1fr;
    gap: 0 1rem;
    align-items: baseline;
  }

  .event-year {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    padding-top: 2px;
  }

  .event-title {
    font-family: 'Inter', sans-serif;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
    margin-bottom: 0.15rem;
  }

  .event-sub {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }

  /* ── Responsive ──────────────────────────────────────── */
  @media (max-width: 768px) {
    .resume-page {
      padding: 2rem 0 4rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .rh {
      flex-direction: column;
      gap: 1rem;
    }

    .rh h1 {
      font-size: 1.75rem;
    }

    .agenda-grid {
      grid-template-columns: 1fr;
    }

    .tl-row {
      flex-direction: column;
      gap: 0.15rem;
    }

    .tl-date {
      font-size: 0.75rem;
    }
  }
</style>
