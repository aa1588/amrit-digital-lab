---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts.filter(post => !post.data.draft);
const recentPosts = publishedPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Home - DigitalLab">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <p class="hello">Hello</p>
          <h1>Amrit Adhikari</h1>
          <p class="role-line">Software Engineer &nbsp;·&nbsp; Dallas, TX</p>
          <p class="subtitle">Writing about software systems, Java, Spring Boot, and the slow process of getting better at this craft.</p>
          <div class="hero-actions">
            <a href={`${base}blog/`} class="cta-primary">Read the blog</a>
            <a href={`${base}about/`} class="cta-secondary">About me</a>
            <div class="social-links">
              <a href="https://www.linkedin.com/in/amrit-adhikari1/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="https://github.com/aa1588" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href="https://scholar.google.com/citations?user=zxIRPZYAAAAJ&hl=en" target="_blank" rel="noopener noreferrer" aria-label="Google Scholar">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 24a7 7 0 1 1 0-14 7 7 0 0 1 0 14zm0-24L0 9.5l4.838 3.94A8 8 0 0 1 12 9a8 8 0 0 1 7.162 4.44L24 9.5z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <img src={`${base}profile-photo.png`} alt="Amrit Adhikari" class="profile-image" />
      </div>
    </div>
  </section>

  <section class="recent-posts">
    <div class="container">
      <div class="section-label">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>
        Recent Writing
      </div>
      <div class="posts-list">
        {recentPosts.map((post, i) => (
          <article class="post-item">
            <a href={`/blog/${post.slug}`} class="post-link">
              <span class="post-index">0{i + 1}</span>
              <div class="post-body">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <h3>{post.data.title}</h3>
                <p class="post-description">{post.data.description}</p>
              </div>
              <span class="post-arrow">→</span>
            </a>
          </article>
        ))}
      </div>
      <div class="view-all-container">
        <a href={`${base}blog/`} class="view-all">View all posts →</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ── Hero ─────────────────────────────────────────────── */
  .hero {
    padding: 7rem 0 5.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-content {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 3rem;
    max-width: 900px;
  }

  .hero-text {
    flex: 1;
  }

  .hello {
    font-family: 'Inter', sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-secondary);
    margin-bottom: 0.6rem;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .role-line {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.25rem;
    line-height: 1.5;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    line-height: 1.75;
    font-weight: 400;
    max-width: 480px;
    margin-bottom: 2rem;
  }

  /* ── Hero actions ─────────────────────────────────────── */
  .hero-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .cta-primary {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-bg);
    background: var(--color-text);
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
    transition: opacity 0.2s;
    letter-spacing: 0.01em;
  }

  .cta-primary:hover {
    opacity: 0.82;
    color: var(--color-bg);
  }

  .cta-secondary {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    transition: color 0.2s;
    letter-spacing: 0.01em;
  }

  .cta-secondary:hover {
    color: var(--color-text);
  }

  .social-links {
    display: flex;
    gap: 0.375rem;
    margin-left: 0.25rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    border-radius: 7px;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
    transition: all 0.2s;
  }

  .social-links a:hover {
    color: var(--color-text);
    border-color: var(--color-text-secondary);
    transform: translateY(-2px);
  }

  /* ── Profile image ────────────────────────────────────── */
  .profile-image {
    width: 240px;
    height: auto;
    object-fit: contain;
    flex-shrink: 0;
    border-radius: 12px;
    transform: rotate(-3deg);
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.15),
      0 5px 15px rgba(0, 0, 0, 0.1),
      -5px 5px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .profile-image:hover {
    transform: rotate(-1deg) translateY(-5px);
    box-shadow:
      0 15px 40px rgba(0, 0, 0, 0.2),
      0 8px 20px rgba(0, 0, 0, 0.12),
      -8px 8px 20px rgba(0, 0, 0, 0.08);
  }

  /* ── Container ────────────────────────────────────────── */
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* ── Recent posts ─────────────────────────────────────── */
  .recent-posts {
    padding: 5rem 0;
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    border-top: 1px solid var(--color-border);
  }

  .post-item {
    border-bottom: 1px solid var(--color-border);
  }

  .post-link {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.75rem 0;
    color: var(--color-text);
    transition: background 0.15s;
  }

  .post-link:hover {
    color: var(--color-text);
  }

  .post-link:hover .post-index {
    color: var(--color-text);
  }

  .post-link:hover h3 {
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-color: var(--color-border);
  }

  .post-index {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    font-weight: 400;
    padding-top: 0.3rem;
    flex-shrink: 0;
    width: 2rem;
    transition: color 0.2s;
    letter-spacing: 0.05em;
  }

  .post-body {
    flex: 1;
  }

  .post-link time {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.4rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.01em;
  }

  .post-link h3 {
    font-size: 1.375rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .post-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.65;
  }

  .post-arrow {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: var(--color-text-secondary);
    flex-shrink: 0;
    padding-top: 0.25rem;
    opacity: 0;
    transform: translateX(-4px);
    transition: opacity 0.2s, transform 0.2s;
  }

  .post-link:hover .post-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  /* ── View all ─────────────────────────────────────────── */
  .view-all-container {
    margin-top: 2.5rem;
  }

  .view-all {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    transition: color 0.2s;
    letter-spacing: 0.01em;
  }

  .view-all:hover {
    color: var(--color-text);
  }

  /* ── Responsive ──────────────────────────────────────── */
  @media (max-width: 768px) {
    .hero {
      padding: 5rem 0 4rem;
    }

    .hero-content {
      flex-direction: column;
      gap: 2rem;
    }

    .profile-image {
      width: 140px;
      order: -1;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.125rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .recent-posts {
      padding: 4rem 0;
    }

    .posts-list {
      gap: 0;
    }

    .post-link {
      gap: 1rem;
      padding: 1.5rem 0;
    }

    .post-index {
      display: none;
    }

    .post-link h3 {
      font-size: 1.25rem;
    }

    .post-description {
      font-size: 0.9375rem;
    }

    .hero-actions {
      gap: 0.75rem;
    }
  }
</style>
