---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogCard from '../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts.filter(post => !post.data.draft);
const recentPosts = publishedPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Home - DigitalLab">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1>Amrit Adhikari</h1>
          <p class="subtitle">Software engineer writing about development, systems, and the craft of building things.</p>
        </div>
        <img src={`${base}LOGO.png`} alt="Amrit Adhikari" class="profile-image" />
      </div>
    </div>
  </section>

  <section class="recent-posts">
    <div class="container">
      <h2 class="section-title">Recent Writing</h2>
      <div class="posts-list">
        {recentPosts.map((post) => (
          <article class="post-item">
            <a href={`/blog/${post.slug}`} class="post-link">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'short', 
                  day: 'numeric' 
                })}
              </time>
              <h3>{post.data.title}</h3>
              <p class="post-description">{post.data.description}</p>
            </a>
          </article>
        ))}
      </div>
      <div class="view-all-container">
        <a href="/blog" class="view-all">View all posts â†’</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: 8rem 0 6rem;
    border-bottom: 1px solid var(--color-border);
  }

  .hero-content {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 3rem;
    max-width: 900px;
  }

  .hero-text {
    flex: 1;
  }

  .profile-image {
    width: 240px;
    height: auto;
    object-fit: contain;
    flex-shrink: 0;
    border-radius: 12px;
    transform: rotate(-3deg);
    box-shadow: 
      0 10px 30px rgba(0, 0, 0, 0.15),
      0 5px 15px rgba(0, 0, 0, 0.1),
      -5px 5px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .profile-image:hover {
    transform: rotate(-1deg) translateY(-5px);
    box-shadow: 
      0 15px 40px rgba(0, 0, 0, 0.2),
      0 8px 20px rgba(0, 0, 0, 0.12),
      -8px 8px 20px rgba(0, 0, 0, 0.08);
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.375rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    font-weight: 400;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .recent-posts {
    padding: 5rem 0;
  }

  .section-title {
    font-size: 1.75rem;
    color: var(--color-text);
    margin-bottom: 3rem;
    font-weight: 600;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .post-item {
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 3rem;
  }

  .post-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .post-link {
    display: block;
    color: var(--color-text);
    transition: opacity 0.2s ease;
  }

  .post-link:hover {
    opacity: 0.7;
  }

  .post-link time {
    display: block;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.01em;
  }

  .post-link h3 {
    font-size: 1.875rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.3;
  }

  .post-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .view-all-container {
    margin-top: 4rem;
    text-align: center;
  }

  .view-all {
    font-size: 1.125rem;
    color: var(--color-text);
    font-weight: 400;
    border-bottom: 1px solid var(--color-text);
    padding-bottom: 2px;
    transition: opacity 0.2s ease;
  }

  .view-all:hover {
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 5rem 0 4rem;
    }

    .hero-content {
      flex-direction: column;
      gap: 2rem;
    }

    .profile-image {
      width: 140px;
      order: -1;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.125rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .recent-posts {
      padding: 4rem 0;
    }

    .section-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .posts-list {
      gap: 2.5rem;
    }

    .post-item {
      padding-bottom: 2.5rem;
    }

    .post-link h3 {
      font-size: 1.5rem;
    }

    .post-description {
      font-size: 1rem;
    }
  }
</style>
