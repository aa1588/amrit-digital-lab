---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
  series?: string;
}

const { title, description, pubDate, slug, tags = [], series } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="blog-card">
  <a href={`${import.meta.env.BASE_URL}blog/${slug}`}>
    {series && (
      <div class="series-badge">
        {series === 'Apache Kafka' ? (
          <span class="series-icon-wrapper">
            <img src="https://cdn.simpleicons.org/apachekafka/231F20" alt="Apache Kafka" class="series-icon" />
            {series}
          </span>
        ) : series === 'Spring Boot - Aspect Oriented Programming' ? (
          <span class="series-icon-wrapper">
            <img src="https://cdn.simpleicons.org/spring/6DB33F" alt="Spring Boot" class="series-icon" />
            {series}
          </span>
        ) : series === 'OAuth 2.0' ? (
          <span class="series-icon-wrapper">
            <img src="https://cdn.simpleicons.org/auth0/EB5424" alt="OAuth 2.0" class="series-icon" />
            {series}
          </span>
        ) : (
          <>ðŸ“š {series}</>
        )}
      </div>
    )}
    <h3>{title}</h3>
    <p class="description">{description}</p>
    <div class="meta">
      <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      {tags.length > 0 && (
        <div class="tags">
          {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.2s;
    box-shadow: var(--shadow);
  }

  .blog-card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
    border-color: var(--color-primary);
  }

  .blog-card a {
    color: inherit;
    text-decoration: none;
  }

  .series-badge {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .series-icon-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    line-height: 1;
  }

  .series-icon {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    vertical-align: middle;
  }

  /* Specific adjustments for Spring logo alignment */
  .series-icon-wrapper img[src*="spring"] {
    width: 18px;
    height: 18px;
    margin-top: -2px;
  }

  /* Make OAuth logo bigger and align properly */
  .series-icon-wrapper img[src*="oauth"] {
    width: 20px;
    height: 20px;
    margin-top: -3px;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    line-height: 1.3;
  }

  .description {
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-bg-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.8rem;
    border: 1px solid var(--color-border);
  }
</style>
