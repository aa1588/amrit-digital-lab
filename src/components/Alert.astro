---
interface Props {
  type?: 'info' | 'success' | 'warning' | 'error';
}

const { type = 'info' } = Astro.props;
---

<div class={`alert alert-${type}`}>
  <div class="alert-content">
    <slot />
  </div>
</div>

<style>
  .alert {
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    margin: 1.5rem 0;
    border-left: 4px solid;
    font-size: 1rem;
    line-height: 1.6;
  }

  .alert-content {
    width: 100%;
  }

  .alert-content :global(p) {
    margin: 0;
  }

  .alert-content :global(p + p) {
    margin-top: 0.75rem;
  }

  .alert-content :global(strong) {
    font-weight: 600;
  }

  /* Info - Blue */
  .alert-info {
    background: #eff6ff;
    border-left-color: #3b82f6;
    color: #1e40af;
  }

  /* Success - Green */
  .alert-success {
    background: #f0fdf4;
    border-left-color: #22c55e;
    color: #166534;
  }

  /* Warning - Yellow/Orange */
  .alert-warning {
    background: #fffbeb;
    border-left-color: #f59e0b;
    color: #92400e;
  }

  /* Error - Red */
  .alert-error {
    background: #fef2f2;
    border-left-color: #ef4444;
    color: #991b1b;
  }

  @media (max-width: 768px) {
    .alert {
      padding: 1rem 1.25rem;
    }
  }
</style>
