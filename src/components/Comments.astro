---
// Giscus Comments Component
// You'll need to replace these values after setting up Giscus
---

<div class="comments-section">
  <div class="comments-header">
    <h2>Comments</h2>
    <p class="comments-subtitle">Join the discussion and share your thoughts</p>
  </div>
  
  <div class="giscus-wrapper">
    <script 
      src="https://giscus.app/client.js"
      data-repo="aa1588/amrit-digital-lab"
      data-repo-id="R_kgDOQb0ZnQ"
      data-category="General"
      data-category-id="DIC_kwDOQb0Znc4CygVN"
      data-mapping="pathname"
      data-strict="0"
      data-reactions-enabled="1"
      data-emit-metadata="0"
      data-input-position="top"
      data-theme="light"
      data-lang="en"
      data-loading="lazy"
      crossorigin="anonymous"
      async>
    </script>
  </div>
</div>

<style>
  .comments-section {
    max-width: 800px;
    margin: 4rem auto 0;
    padding: 0 1.5rem;
  }

  .comments-header {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-border);
  }

  .comments-header h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .comments-subtitle {
    font-size: 1.0625rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .giscus-wrapper {
    background: var(--color-bg);
    border-radius: 12px;
    padding: 2rem;
    border: 1px solid var(--color-border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  /* Custom styling for Giscus iframe */
  .giscus-wrapper :global(.giscus-frame) {
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .comments-section {
      margin-top: 3rem;
    }

    .comments-header h2 {
      font-size: 1.5rem;
    }

    .comments-subtitle {
      font-size: 0.9375rem;
    }

    .giscus-wrapper {
      padding: 1.25rem;
    }
  }
</style>
